<patTemplate:tmpl name="row" type="modulo" modulo="3" addSystemVars="on">
	<patTemplate:sub condition="__empty">
<div>No variables have been passed.</div>
	</patTemplate:sub>
	<patTemplate:sub condition="0">
<div style="background-color:#ffcccc">{VALUE} (PAT_MODULO: {PAT_MODULO} // PAT_MODULO_REP: {PAT_MODULO_REP})</div>
	</patTemplate:sub>
	<patTemplate:sub condition="1">
<div style="background-color:#ccccff">{VALUE} (PAT_MODULO: {PAT_MODULO} // PAT_MODULO_REP: {PAT_MODULO_REP})</div>
	</patTemplate:sub>
	<patTemplate:sub condition="2">
<div style="background-color:#ccffcc">{VALUE} (PAT_MODULO: {PAT_MODULO} // PAT_MODULO_REP: {PAT_MODULO_REP})</div>
	</patTemplate:sub>
</patTemplate:tmpl>
